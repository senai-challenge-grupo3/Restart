<div class="text-center home">
	<%= image_tag("icongame") %>		
</div>

<div class="devise card-body">
<!--<h2 class="text-center">Entrar</h2>-->

	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="form-inputs">
		<%= f.input :login, required: false, autofocus: true, input_html: { autocomplete: "login" } %>
		<%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
	</div>

	<div class="form-actions text-center">
		<%= f.button :submit, "Login", class: "btn btn-outline-light" %>
	</div>

	<% end %>

	<%= render "devise/shared/links" %>
</div>