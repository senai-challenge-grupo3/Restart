<h2 class="text-center devise">Usuário</h2>
<div class="devise card-body">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :nome, required: true %>
    <%= f.input :login, required: true %>
    <%= f.input :data_nascimento, required: true, label: "Data de Nascimento", start_year: Date.today.year - 150, end_year: Date.today.year, order: [:day, :month, :year], prompt: {day: "Dia", month: "Mês", year: "Ano"} %>
    <%= f.input :password, label: "Senha", hint: "não preencha caso não queira mudar sua senha", required: false %>
    <%= f.input :password_confirmation, label: "Confirmar a senha", required: false, input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password, label: "Senha atual", hint: "precisamos da sua senha atual para muda-la", required: true %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Atualizar" %>
  </div>
<% end %>

<%= link_to "Cancele sua conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete, class: "btn btn-outline-light btn-sm" %>
<br>
<%= link_to "Voltar", :back, class: "btn btn-outline-light btn-sm" %>

</div>
